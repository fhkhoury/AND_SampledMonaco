<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="fiftyfive.and_sampledmonaco.Email_check">

    <TextView
        android:id="@+id/Email_Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Check"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/Email_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email_address"
        android:layout_below="@id/Email_Check"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/OpenEmailButton"
        android:layout_width="209dp"
        android:layout_height="49dp"
        android:text="Open Email"
        android:layout_below="@id/Email_Address"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/ResendButton"
        android:layout_width="209dp"
        android:layout_height="49dp"
        android:text="Resend"
        android:layout_below="@id/OpenEmailButton"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
